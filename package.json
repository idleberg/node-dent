{
	"name": "@nsis/dent",
	"version": "0.2.2",
	"description": "An opinionated code formatter for NSIS scripts",
	"license": "MIT",
	"scripts": {
		"build": "esbuild src/main.ts --bundle --platform=node --outfile=dist/index.mjs --format=esm --external:detect-newline --external:globby",
		"dev": "npm run start",
		"fix": "eslint --fix ./src",
		"lint:json": "eslint ./*.json --ignore-path .gitignore",
		"lint:ts": "eslint ./src --ignore-path .gitignore",
		"lint": "npm-run-all --parallel lint:*",
		"prepack": "npm run build",
		"start": "npm run build -- --watch",
		"test": "uvu tests",
		"prepare": "husky install"
	},
	"files": [
		"dist/",
		"types/",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"type": "module",
	"typings": "types/",
	"exports": {
		".": {
			"import": "./dist/index.mjs"
		}
	},
	"engines": {
		"node": "^14.13.1 || >=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/node-dent.git"
	},
	"keywords": [
		"nsis",
		"formatter"
	],
	"dependencies": {
		"detect-newline": "^4.0.0",
		"globby": "^13.2.2"
	},
	"devDependencies": {
		"@types/node": "^20.2.1",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"esbuild": "^0.18.13",
		"eslint": "^8.45.0",
		"eslint-plugin-json": "^3.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"npm-run-all2": "^6.0.6",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"uvu": "^0.5.6"
	},
	"lint-staged": {
		"*.(json|ts)": "eslint --cache --fix"
	}
}
