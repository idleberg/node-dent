{
	"name": "@nsis/dent",
	"version": "0.0.0",
	"description": "An opinionated formatter for NSIS files",
	"license": "MIT",
	"scripts": {
		"build": "rollup --config",
		"dev": "npm run start",
		"fix": "eslint --fix ./src",
		"lint:json": "eslint ./*.json --ignore-path .gitignore",
		"lint:md": "remark . --quiet --frail --ignore-path .gitignore",
		"lint:ts": "eslint ./src --ignore-path .gitignore",
		"lint": "npm-run-all --parallel lint:*",
		"prepack": "npm run build",
		"start": "rollup --watch --config",
		"test": "ava --verbose",
		"prepare": "husky install"
	},
	"files": [
		"types/",
		"LICENSE",
		"README.md"
	],
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.mjs"
		}
	},
	"engines": {
		"node": "^14.13.1 || >=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/node-dent.git"
	},
	"keywords": [
		"nsis",
		"formatter"
	],
	"dependencies": {
		"globby": "^13.1.2"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^8.5.0",
		"@types/node": "^18.7.16",
		"ava": "^4.3.3",
		"detect-newline": "^4.0.0",
		"eslint": "^8.23.0",
		"eslint-plugin-json": "^3.1.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"npm-run-all2": "^6.0.2",
		"rollup": "^2.79.0",
		"tslib": "^2.4.0",
		"typescript": "^4.8.2"
	},
	"lint-staged": {
		"*.(json|ts)": "eslint --cache --fix",
		"*.md": "prettier --write"
	}
}
